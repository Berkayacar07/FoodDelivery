<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Add Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/fooddelivery"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_fooddelivery_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodDelivery">
        <activity
            android:name=".Restaurant.RestaurantForgotPassword"
            android:exported="false"
            tools:ignore="MissingClass" />
        <activity
            android:name=".Restaurant.RestaurantLogInActivity"
            android:exported="false" />
        <activity
            android:name=".Customer.CustomerForgotPassword"
            android:exported="false" />
        <activity
            android:name=".Restaurant.RestaurantMainPageActivity"
            android:exported="false" />
        <activity
            android:name=".Customer.CustomerMainPageActivity"
            android:exported="false" />
        <activity
            android:name=".Customer.CustomerSignUpActivity"
            android:exported="false" />
        <activity
            android:name=".Customer.CustomerLogInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>